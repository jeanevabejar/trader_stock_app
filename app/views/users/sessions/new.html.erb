<div class="full-size center-item text-white">
  <div class="border border-black w-[50%] h-[50vh] center-item flex-col">
<h2>Log in User</h2>
<% flash.each do |key, value| %>
  <div class=" alert alert-<%= key %> text-red-500">
    <%= value %>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-black" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"text-black" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions center-item">
    <%= f.submit "Log in" %>
  </div>
<% end %>


<div class="text-[0.8rem]">
  <%= render "users/shared/links" %>
</div>
  
  </div>
  
</div>
