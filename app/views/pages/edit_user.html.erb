<h1>Edit User</h1>

<%= form_with(model: @user, url: update_user_path(@user), method: :patch, local: true) do |form| %>
 <div>
   <%= form.label :email %>
   <%= form.text_field :email %>
   <% if @user.is_approved? %>
      User is approved for trading.
   <% elsif @user.confirmed? && !@user.is_approved %>
      <span>Approved User for Trading</span>
      <%= form.check_box :is_approved %>
   <% else %>
      User haven't confirmed his/her account yet.
   <% end %>
 </div>

 <%= form.submit "Update User" %>
<% end %>
