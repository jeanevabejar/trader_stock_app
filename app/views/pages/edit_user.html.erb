<%= turbo_frame_tag "modal" do%>

<div class="h-1/3 w-1/3 font-thin text-white fixed z-[1] -translate-x-2/4 -translate-y-2/4 overflow-auto bg-[rgba(0,0,0,0.797)] shadow-[0_0_10px_0_rgba(0,0,0,0.2),0_5px_10px_0_rgba(0,0,0,0.19)] p-[2em] rounded-[5px] left-2/4 top-2/4">

<h1>Edit User</h1>
   <br>
<%= form_with(model: @user, url: update_user_path(@user), method: :patch, local: true, data: { turbo: false }) do |form| %>
 <div>
   <%= form.label :email %>
   <%= form.text_field :email, class: "bg-transparent border-x=transparent" %>
   <br>
      <br>
   <% if @user.is_approved? %>
      User is approved for trading.
   <% elsif @user.confirmed? && !@user.is_approved %>
      <span>Approved User for Trading</span>
      <%= form.check_box :is_approved %>
   <% else %>
      User haven't confirmed his/her account yet.
   <% end %>
 </div>

 <%= form.submit "Update User",class: "absolute left-10 bottom-10 bg-transparent text-xs text-[white] rounded cursor-pointer float-right no-underline px-2 py-1 border-[none] hover:bg-gray-500" %>
<% end %>

<%= link_to "Cancel", pages_user_path, data: {
    controller: "modals",
    action: "modals#close"
    }, class: "absolute right-10 bottom-10 bg-transparent text-xs text-[white] rounded cursor-pointer float-right no-underline px-2 py-1 border-[none] hover:bg-gray-500" %>
</div>

<% end %>