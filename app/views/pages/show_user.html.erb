<%= turbo_frame_tag "modal" do%>

<div class="h-1/3 w-1/3 text-white fixed z-[1] -translate-x-2/4 -translate-y-2/4 overflow-auto bg-[rgba(0,0,0,0.797)] shadow-[0_0_10px_0_rgba(0,0,0,0.2),0_5px_10px_0_rgba(0,0,0,0.19)] p-[2em] rounded-[5px] left-2/4 top-2/4">

<h1>Inspect User</h1>
<br>
<p>User ID: <%= @user.id %></p>
<p>Email: <%= @user.email %></p>

<%= link_to "Cancel", pages_user_path, data: {
    controller: "modals",
    action: "modals#close"
    }, class: "absolute right-10 bottom-10 bg-transparent text-xs text-[white] rounded cursor-pointer float-right no-underline px-2 py-1 border-[none] hover:bg-gray-500" %>
</div>

<% end %>