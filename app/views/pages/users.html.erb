  <div class="border border-black w-[25%] h-[60vh] text-[0.8rem] center-item flex-col">
       <%= render 'pages/user/search_form' %>
    <table>
      <tr>
        <th>Stock Code</th>
        <th>Company Name</th>
        <th>Market Price</th>
      </tr>
      <%@client.stock_market_list(:mostactive).each do |data|%>
