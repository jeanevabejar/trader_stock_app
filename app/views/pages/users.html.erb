<% flash.each do |key, value| %>
  <div class=" alert alert-<%= key %> text-red-500 absolute border border-black inset-0 flex justify-center">
    <%= value %>
  </div>
<% end %>
<div class="border border-blue-900 full-size">
  <% if user_signed_in? %>
  <div class="border border-black flex justify-between">
    <h1 class="font-bold text-4xl">Trader Dashboard</h1>
    <div class="border border-black relative w-[10%] capitalize text-center">
      <div class="h-[5vh]">
         <% @user.each do |data|%>
      <%= data.email.split("@")[0]%>
      <% end %>
      </div>
     

      <div class="border border-black absolute w-full">      
           <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: {  turbo_method: :delete }, class:"block"%>
          <%= link_to "Edit", edit_user_registration_path , class:"block" %>
      </div>
     
    </div>
    
  </div>
 <%= render 'pages/user/dashboard' %>
  <%end%>
  

</div>
