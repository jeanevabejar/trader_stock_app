<table class="w-full" >
  <thead>
    <tr>
      <th>Stock Name</th>
      <th>Price</th>
      <th>Share/Quantity</th>
      <th>Transaction type</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |t| %>
      <tr class="text-center">
        <td><%= t.stock_name %></td>
        <td><%= t.price %></td>
        <td><%= t.share %></td>
        
          <% if t.is_buy == true %>
         <td class="text-green-700 font-medium">Buy</td>
          <% else %>
        <td class="text-red-700 font-medium">Sell</td>
          <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>